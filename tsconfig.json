{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["index.ts", "routes/**/*", "config/**/*", "middleware/**/*", "model/**/*", "service/**/*", "type/**/*", "upload/**/*", "utils/**/*"]
}